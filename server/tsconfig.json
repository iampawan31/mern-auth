{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "target": "esnext",
    "esModuleInterop": true,
    "noEmit": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"], // Ensure all your source files are included
  "exclude": ["node_modules"]
}
